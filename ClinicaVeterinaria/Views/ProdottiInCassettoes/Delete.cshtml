@model ClinicaVeterinaria.Models.ProdottiInCassetto

@{
    ViewData["Title"] = "Delete";
}

<h1>Elimina Prodotto nel cassetto</h1>

<h3>Sei sicuro di voler eliminare questa prodotto nel cassetto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantita)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Quantita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCassettoNavigation)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.IdCassettoNavigation.IdCassetto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdProdottoNavigation)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.IdProdottoNavigation.IdProdotto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProdottoInCassetto" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a class="btn btn-outline-success me-2" asp-action="Index">Lista Prodotti in cassetto</a>
    </form>
</div>
