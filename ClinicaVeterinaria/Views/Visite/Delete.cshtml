    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdVisita" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
        <a class="btn btn-outline-info me-2" asp-action="Index">Lista Visite</a>
    </form>
</div>
