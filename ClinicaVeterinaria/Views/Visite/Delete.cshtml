@model ClinicaVeterinaria.Models.Visite

@{
    ViewData["Title"] = "Delete";
}

<h1>Elimina</h1>

<h3>Sei sicuro di voler eliminare questa visita?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVisita)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.DataVisita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Anamnesi)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Anamnesi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescrizioneCura)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.DescrizioneCura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdAnimaleNavigation)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.IdAnimaleNavigation.Idanimale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdRicettaNavigation)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.IdRicettaNavigation.IdricettaMedica)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrezzoVisita)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.PrezzoVisita)
