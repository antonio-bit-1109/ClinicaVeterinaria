@model IEnumerable<ClinicaVeterinaria.Models.Animali>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>


<div class="container">
	<div class="row">
		
			@foreach (var item in Model)
			{		<div class="col-4">	
					<div class="card">
						<img src="../images/animali/@item.FotoAnimale" class="img-thumbnail" alt="...">
						<div class="card-body">
							<h5 class="card-title">@item.NomeAnimale</h5>
							<p class="card-text">@item.Dataregistrazione</p>
							<p class="card-text">@item.Tipologia</p>
							<p class="card-text">@item.ColoreMantello</p>
							<p class="card-text">@item.Datanascita</p>
							<p class="card-text">@item.HasMicrochip</p>
							<p class="card-text">@item.NumMicrochip</p>
							<p class="card-text">@item.HasProprietario</p>
							<p class="card-text">@item.IdUtente</p>
						</div>
						<div>
						<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Idanimale">Edit</a> |
						<a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Idanimale">Details</a> |
						<a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Idanimale">Delete</a>
						</div>
						
				</div>
			</div>
			}


		
	</div>
</div>

