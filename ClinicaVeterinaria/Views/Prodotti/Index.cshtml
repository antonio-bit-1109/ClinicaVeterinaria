@model IEnumerable<ClinicaVeterinaria.Models.Prodotti>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Prodotti</h1>
    <p class="mb-0">
        <a class="btn btn-success" asp-action="Create">Aggiungi Prodotto</a>
    </p>
</div>

<form asp-controller="Prodotti" asp-action="Index" method="get">
    <div class="form-group d-flex justify-content-between">
        <input type="text" name="prodotto" class="form-control mb-3" placeholder="Cerca per Nome Prodotto">
        <button type="submit" class="btn btn-outline-success ms-3 mb-3">Cerca</button>
    </div>
</form>
<p class="mb-0 text-end">
    <a class="btn btn-success" asp-action="Create">Aggiungi Prodotto</a>
</p>

<div class="row mb-3">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card">
                <img src="@Url.Content("~/images/prodotti/" + item.FotoProdotto)" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Nomeprodotto</h5>
                    <p class="card-text">Prezzo: @item.Prezzo</p>
                    <p class="card-text">Medicinale: @item.IsMedicinale</p>
                  @*   <p class="card-text">Possibili Usi: @item.PossibiliUsi</p>
                    <p class="card-text">Fornitore: @item.IdDittaFornitriceNavigation.NomeDitta</p> *@
                    <a class="btn btn-success me-2" asp-action="Edit" asp-route-id="@item.IdProdotto">Modifica</a>
                    <a class="btn btn-outline-success me-2" asp-action="Details" asp-route-id="@item.IdProdotto">Dettagli</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdProdotto">Elimina</a>
                </div>
            </div>
        </div>
    }
</div>
               
