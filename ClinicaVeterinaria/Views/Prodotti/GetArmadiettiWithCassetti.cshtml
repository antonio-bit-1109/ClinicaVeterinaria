@model IEnumerable<ClinicaVeterinaria.Models.Prodotti>

@{
    ViewData["Title"] = "GetArmadiettiWithCassetti";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Prodotti nel Cassetto</h1>
    <p class="mb-0">
        <a class="btn btn-success" asp-action="Create">Aggiungi Prodotto nel Cassetto</a>
    </p>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nomeprodotto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsMedicinale)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PossibiliUsi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prezzo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FotoProdotto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdDittaFornitriceNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nomeprodotto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsMedicinale)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PossibiliUsi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prezzo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FotoProdotto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdDittaFornitriceNavigation.IdDittaFornitrice)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-success me-2" asp-action="Edit" asp-route-id="@item.IdProdotto">Modifica</a>
                        <a class="btn btn-sm btn-outline-success me-2" asp-action="Details" asp-route-id="@item.IdProdotto">Dettagli</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdProdotto">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
