@model ClinicaVeterinaria.Models.Cassetti

@{
    ViewData["Title"] = "Create";
}

<h1>Aggiungi Cassetti</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="IdArmadietto" class="control-label"></label>
                <select asp-for="IdArmadietto" class ="form-control" asp-items="ViewBag.IdArmadietto"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descrizione" class="control-label"></label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aggiungi" class="btn btn-success me-2" />
                <a class="btn btn-outline-success me-2" asp-action="Index">Lista Cassetti</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
