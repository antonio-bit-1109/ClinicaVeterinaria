@model ClinicaVeterinaria.Models.Ricoveri

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ricoveri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
